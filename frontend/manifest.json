{
    "manifest_version": 3,
    "name": "CollectiveEdu",
    "version": "1.0",
    "description": "Provides hints on OpenEdu tasks",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "webRequestFilterResponse"
    ],
    "host_permissions": [
        "https://courses.openedu.ru/",
        "http://127.0.0.1:8080/*",
        "http://185.112.102.15:8080/*"
    ],
    "content_scripts": [
      {
        "matches": ["*://courses.openedu.ru/*"],
        "js": ["src/content.ts"],
        "all_frames": true
      }
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "public/vite.svg",
            "24": "public/vite.svg",
            "32": "public/vite.svg"
        }
    },
    "background": {
        "scripts": ["src/background.ts"],
        "type": "module"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "moleus@collective-edu",
            "strict_min_version": "58.0"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}

